{
	"manifest_version": 3,
	"name": "Chaos Extension",
	"version": "1.1",
	"description": "A fun little extension that activates a random effect on a site after a certain amount of time.",
	"permissions": ["storage"],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"action": {
		"default_icon": "ce_16.png"
	},
	"icons": {
		"16": "ce_16.png",
		"32": "ce_32.png",
		"48": "ce_48.png",
		"128": "ce_128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"js/effects.js",
				"js/chaos.js"
			],
			"css": ["css/chaos.css"]
		}
	]
}
